extends layout.pug

block content
  .empty
  header.inner-header
    .grid.grid--container
      a(href="").btn.btn--inner
        i.fa.fa-angle-left
        span Назад
      h1 Контакты

  .contacts-map
    .map
      iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2816.8159145447253!2d38.98807731561053!3d45.08952597909836!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDXCsDA1JzIyLjMiTiAzOMKwNTknMjUuMCJF!5e0!3m2!1sru!2sru!4v1492419346070" width="600" height="450" frameborder="0" style="border:0" allowfullscreen)

  .grid.grid--container
    .row
      .col.col--lg-6
        h3 Обратная связь
        form.feedback
          .row
            .col.col--lg-12
              .form-group
                label Ваше имя
                input(type="text")
            .col.col--lg-6.col--md-6
              .form-group
                label Контактный телефон
                input(type="text").phone-mask
            .col.col--lg-6.col--md-6
              .form-group
                label E-mail
                input(type="email")
            .col.col--lg-12
              .form-group
                label Ваше сообщеие
                textarea
          .row.row--sm-center
            .col.col--lg-6
              .form-group
                input(type="text")
            .col.col--lg-6
              img(src="img/captcha.jpg", alt="")
            .col.col--lg-6
              button.btn.btn--primary Отправить
      .col.col--lg-6
        h3 Контактные данные
        .contacts-data
          .contacts-data__title
            .contacts-data__icon
              i.icon.fa.fa-map-marker
            span Адрес
          .contacts-data__desc 354000, Россия, г. Сочи, ул. Роз, 31, офис 32
          .contacts-data__title
            .contacts-data__icon
              i.icon.fa.fa-envelope
            span E-mail
          .contacts-data__desc
            a(href="").link info@ekka.info
          .contacts-data__title
            .contacts-data__icon
              i.icon.fa.fa-phone
            span Телефоны
          .contacts-data__desc Москва:
            br
            | +7 (495) 232-91-23
            br
          .contacts-data__desc Сочи:
            br
            | +7 (8622) 66-50-46; 64-06-27; 66-54-46; 64-58-23.

  .contacts-team
    .grid.grid--container
      h3 Сотрудники ЭККА-Сочи-Трэвел
      .row
        .col.col--lg-3.col--md-6.col--sm-6.col--lg-flex
          .contacts-team__item
            .contacts-team__name Значко Ольга
            .contacts-team__position Коммерческий директор
            .contacts-team__number 8 8622 64-06-27
            .contacts-team__skype
              i.fa.fa-skype
              span ekka-olga
        .col.col--lg-3.col--md-6.col--sm-6.col--lg-flex
          .contacts-team__item
            .contacts-team__name Мартиросян Карина
            .contacts-team__position Специалист по тендерному направлению
            .contacts-team__number 8 8622 64-06-27
            .contacts-team__skype
              i.fa.fa-skype
              span ekka-karina
        .col.col--lg-3.col--md-6.col--sm-6.col--lg-flex
          .contacts-team__item
            .contacts-team__name Калашникова Елена
            .contacts-team__position Менеджер по продажам
            .contacts-team__number 8 8622 64-06-27
            .contacts-team__skype
              i.fa.fa-skype
              span ekka-erik
        .col.col--lg-3.col--md-6.col--sm-6.col--lg-flex
          .contacts-team__item
            .contacts-team__name Мартиросян Эрик
            .contacts-team__position Менеджер по продажам
            .contacts-team__number 8 8622 64-06-27
            .contacts-team__skype
              i.fa.fa-skype
              span ekka-erik




