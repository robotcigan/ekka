extends layout.pug

block content
  .empty.empty--special

  .country
    img(src="img/directions/russia.jpg", alt="")
    .grid.grid--container.relative
      .country__text
        .country__title Россия

  .grid.grid--container.page-section

    a(href="").back
      i.fa.fa-angle-left
      span Назад к отелям в Сочи

    h1.inner-h1 Все направления в России

    .row.directions-links
      - for (var i = 0; i < 12; i++)
        .col.col--lg-3.col--md-3
          .direction-link
            a(href="").direction-link__title Имеретенский курорт
            .direction-link__objects 312 объектов

    - for(var y = 0; y < 3; y++)

      h2.inner-h2 Лучшие объекты Сочи
      .tabs
        nav.tabs__nav
          li: a(href="#Санатории").active Санатории
          li: a(href="#Пансионаты") Пансионаты
          li: a(href="#Гостиницы") Гостиницы
          li: a(href="#Гостевые дома") Гостевые дома
          li: a(href="#Коттеджи") Коттеджи
          li: a(href="#Базы отдыха") Базы отдыха
        .tabs__content.tabs__content--active
          .hotels.row
            - for (i = 0; i < 3; i++)
              .col.col--lg-4.col--md-4
                .hotel
                  .hotel__img
                    img(src="img/_hotel-2.jpg", alt="")
                  .hotel__header
                    .hotel__header_left
                      .hotel__title Black Sea / Чёрное море
                    .hotel__header_right
                      .stars.hotel__stars
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                  .hotel__adress г. Сочи, Курортный проспект, 83
                  a(href="").link Подробнее

        - for (var x = 0; x < 5; x++)
          .tabs__content
            p Повседневная практика показывает, что дальнейшее развитие различных форм деятельности играет важную роль в формировании дальнейших направлений развития. С другой стороны новая модель организационной деятельности.

      .all-objects-btn
        .btn.btn--primary
          span Все санатории в Сочи
          i.fa.fa-angle-right


  include viewed.pug









