extends layout.pug

block content
  .empty.empty--special
  
  .image-background

    .grid.grid--container
      .row
        .col.col--lg-4.col--lg-offset-4
          form.sending-form
            .sending-form__title Восстановление пароля
            .row
              .col.col--lg-12
                .form-group
                  label Новый пароль
                  .input-with-icon
                    .input-with-icon__icon
                      i.fa.fa-lock
                    input(type="password")
              .col.col--lg-12
                .form-group
                  label Повторите пароль
                  .input-with-icon
                    .input-with-icon__icon
                      i.fa.fa-lock
                    input(type="password")
            .row.row--sm-center.sending-form__bottom
              .col.col--lg-4.col--md-4.col--xs-4
                button.btn.btn--primary Подтвердить


