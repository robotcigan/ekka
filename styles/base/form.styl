.book
  box-shadow $shadow
  &__img
    shadow()
    img
      display block
      user-select none
      width 100%
  &__title
    bottom 1rem
    color #fff
    font-size 2.4rem
    line-height 1
    left 2rem
    right 2rem
    position absolute
  &__form
    padding 2rem
  .btn
    margin-top 2rem


.form-header
  font-size 1.8rem
  font-weight 700
  margin-bottom 1rem
  margin-top 2rem

.form-group
  margin-bottom 1rem

label
  display block
  font-size 1.3rem
  margin-bottom .5rem


input,
select,
textarea
  background #fff
  border 1px solid $light-gray
  border-radius $radius
  padding .5rem
  padding-left 1rem
  transition border-color .2s
  width 100%
  -webkit-appearance none
  &:hover
    border-color $light-gray - 10%
  &:focus
    border-color $primary

textarea
  padding 1rem
  resize vertical
  -webkit-appearance none

select,
option
  cursor pointer
  -webkit-appearance none


.select2
  &-dropdown
    border-color $light-gray


.select2-dropdown.select2-dropdown--below
  animation fadeUp .3s forwards

.select2-container--open .select2-dropdown--below
  box-shadow $shadow

.select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
  transform rotate(180deg)

.select2.select2-container.select2-container--default.select2-container--below.select2-container--focus
  width 100% !important
  min-width 100% !important
  max-width 100% !important

.select2-container--default
  .select2-selection--single
    border-color $light-gray
    height 3.4rem
    .select2-selection__rendered
      line-height 3.2rem
    .select2-selection__arrow b
      border none
      background url('../../img/arrows.png') no-repeat
      height 5px
      margin-left -10px
      margin-top 1px
      transition transform .2s
      width 10px
  .select2-search--dropdown
    .select2-search__field
      border-color $light-gray
  .select2-results__option
    &--highlighted[aria-selected]
      background-color rgba($secondary, .3)
      color $main
    &[aria-selected=true]
      background-color $secondary
      font-weight 700

.guest-information
  display none


#slider-value
  color #999
  display inline-block
  font-size 1.1rem
  margin-top 1rem
.slider-value-text
  color #999
  display inline-block
  font-size 1.1rem
  font-weight 600
  margin-left .5rem
  margin-top 1rem

.guest-clicker
  position relative
  &__modal
    bottom -113px
    border-radius $radius
    display block
    left 0
    padding 1rem 2rem
    position absolute
    width 20rem
  &__group:not(:last-child)
    margin-bottom 1rem
  &__label
    display inline-block
    margin-right 1rem
    width 40%
  &__room-number,
  &__guest-number
    display inline-block
    margin 0 .5rem
  &__btn
    display inline-block
    border 1px solid $light-gray
    border-radius 50%
    cursor pointer
    height 2.4rem
    font-weight 600
    text-align center
    transition all .2s
    user-select none
    width 2.4rem
    &:hover
      background $primary
      border-color $primary
      color #fff


.input-with-icon
  position relative
  &__icon
    display block
    float left
    height 3.4rem
    position absolute
    right .2rem
    text-align center
    transition border-color .2s
    width 3.2rem
    .fa
      color $light-gray
      line-height 3.2rem
      transition color .2s
      &.active
        color $primary
  input
    display block

.popup
  border 1px solid $light-gray
  box-shadow $shadow

.custom-checkbox
  display none
  &-label
    display inline-block
    cursor pointer
    margin-right 1rem
    &--active
      i:before
        color $primary

.datepicker
  &.active
    border-radius $radius $radius $radius 0

.datepicker:hover,
.datepicker:focus
  border-color $light-gray
.pickmeup.pmu-view-days
  animation fadeUp .3s forwards

.datepicker-range
  margin-top 48px


.sending-form
  background #fff
  border-radius $radius
  margin-top 8rem
  margin-bottom 8rem
  padding 2rem
  position relative
  z-index 10
  &__title
    font-size 2.2rem
    margin-bottom 3rem
  &__bottom
    margin-top 2rem


@keyframes fadeUp
  0%
    opacity 0
    transform translate3d(0, 10px, 0)
  100%
    opacity 1
    transform none