.mobile-menu
  background #fff
  height 100%
  opacity 1
  overflow auto
  left 0
  // padding 4rem 3rem
  padding 5% 8%
  position fixed
  transform translateX(-100%)
  transition transform .4s cubic-bezier(1, .15, .2, .9) .2s, opacity .1s
  top 0
  width 100%
  z-index 200
  &--active
    opacity 1
    transform translateX(0)
  &__name
    color $main
    font-size 1.6rem
    font-weight 600
    letter-spacing 1px
    line-height .9
    text-decoration none
    text-transform uppercase
  &__close
    height 3rem
    position absolute
    right 1rem
    top 3.3rem
    padding-right 15%
    width 3rem
    &:before,
    &:after
      content ''
      background $main
      height 2px
      left 15%
      position absolute
      top 45%
      width 2rem
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
  &__header
    color $primary
    font-size 2.4rem
    font-weight 700
    letter-spacing 1px
    line-height 1.4
    margin-bottom 0
    margin-top 5rem
    text-transform uppercase
    max-width 30rem
  &__phone
    color #aaa
    font-size 1.8rem
    font-weight 600
    letter-spacing 1px

.mobile-nav
  margin-top 5.5rem
  &__link
    display block
    margin-bottom 2rem
    a
      color $main
      font-size 1.4rem
      font-weight 600
      letter-spacing 1px
      line-height 1
      text-decoration none
      text-transform uppercase

.tabs__select
  display none
  margin-bottom 2rem

@media(max-width 1100px)
  .grid--container
    max-width 95%
  .header-nav
    display none
  .main-header
    &__phone
      display none
  .menu-open
    display block
  .hero
    height 40rem
  .masonry
    &-column
      padding 0 1.3rem 3.2rem 1.3rem
      width 31.1rem
      width 50%

  .special-slider
    .slide
      display block
      // margin-right 2rem
      margin-left 1rem
      &__img
        display block
        width 100%
        img
          width 100%
  
  .hotel
    &__header
      &_left
        float none
        width initial
      &_right
        float none
        width initial
    &__title
      font-size 1.8rem
  
  .gallery
    display block
    margin 5rem 0
    &__img
      margin-bottom 1rem
      margin-right 1rem
  
  .card
    &__middle
      padding 2rem 1rem
      &_top
        max-height initial
    &__anons
      display none
    &__right
      flex-basis 25%
      padding 2rem 1rem
    &__title
      margin-bottom 0
    &__adress
      margin-bottom .5rem

  .title-stars
    display block
    margin-bottom .5rem
    .stars
      text-align left

  .city
    &__text
      bottom 1.5rem
      left 1rem
    &__title
      font-size 1.8rem
    &__objects
      line-height 1


  .main-footer
    &__header
      font-size 2.2rem
    &__navigation
      li
        margin-bottom .5rem
      a
        font-size 1.4rem
    &__middle
      margin-bottom 4rem
  
  .transfer-success
    img
      width 30%


@media(max-width 767px)
  .mobile-menu
    padding 4rem 3rem
    &__close
      top 3.3rem
      padding-right 15%
  .hero
    height 50rem
    &__bg
      animation none
    .index-header
      animation none
      line-height 1
      font-size 3rem
      margin-bottom 2rem
    &__form
      animation none
      display initial
    .hero__input
      &:before
        display none
      &:first-child input
        border-radius $radius $radius 0 0
      input
        border-bottom 1px solid $light-gray
    &__btn
      border-radius 0 0 $radius $radius
      width 100%
  .inner-h1
    font-size 2.4rem
    margin 2rem 0
  .map
    iframe
      height 25rem
  .offer
    margin-bottom 4rem
  .card
    display block
    &__img
      height 30rem
      img
        width 100%
    &__plate
      font-size 1.6rem
      top 2rem
      &--type-1
        left 1.5rem
      &--type-2
        right 1.5rem
    &__middle
      &_top
        max-height initial
    &__anons
      margin-bottom 2rem
    &__right
      justify-content space-between
      align-items center
    &__rating
      margin-bottom 2rem
      &_title
        font-size 1.5rem
        line-height 1
      &_number
        font-size 3.6rem
    &__guests
      margin-bottom 2rem
    &__bottom
      padding 2rem 1rem
      padding-bottom 0
    .btn
      text-align center
      width 100%

    &--offer &__img
      height initial
      max-width 100%
      img
        max-height initial
    &--offer &__middle
      padding-bottom 0
    &--offer .ta
      float left
      width 45%
    &--offer &__right
      align-items flex-start
      .ta
        display inline-block
        text-align left
    &--offer &__main-info
      display inline-block
      float right
      width 50%

  .title-stars
    display block
    margin-bottom 1rem
    .stars
      text-align left
  .inner-header
    height 7rem
    h1
      font-size 2.2rem
      padding 0 3rem
    .btn--inner
      padding 0.5rem 1rem
      // top 15%
      .fa
        transform translate(4px, 0)
      span
        display none
  .comment
    flex-wrap wrap
    &__right
      width 100%
  
  .tabs
    &__nav
      display none !important
    &__select
      display block
  
  .noUi-horizontal .noUi-handle
    height 16px
    top -6px
    width 16px
  

  .room
    &__img
      float none
      margin-right 0
      img
        width 100%
    &__title
      max-width 100%
      margin-bottom 2rem
      a
        font-size 1.5rem
    &__subtitle
      margin-bottom 1px
    &__parameters
      height initial
      padding 1rem
      &__items
        display block
    &__services
      margin-bottom 1rem
    &__guests
      margin-bottom 1rem
    & select
      margin-bottom 1rem
    &__price
      font-size 3.6rem
      text-align center
      margin-bottom 1rem
      .ruble:before
        font-size 3.6rem
    .btn
      padding 1rem
      text-align center
      width 100%

  .accordion
    &__header
      h3
        width initial
        margin-right 1rem

  .tabs
    &__nav
      display flex
      justify-content space-between
      li
        a
          padding .5rem
          

  .direction-big
    &__text
      bottom 2rem
    &__title
      font-size 3.6rem
  
  .sending-form__bottom
    .link
      margin-top 2rem
      text-align left

  .btn--mobile-full
    text-align center
    width 100%

  .hotel-header
    display block
    .inner-h1
      font-size 2.4rem
      line-height 1.2
    .stars
      .fa
        float none

  .offer
    &-price
      text-align left
    &-guest
      text-align left

  .country
    &__text
      bottom 1.5rem
      left 2rem
    &__title
      font-size 3rem


  
  .main-footer
    padding-top 4rem
    &__header
      font-size 2.4rem
    &__navigation
      a
        font-size 1.6rem
    &__bottom
      margin-top 4rem
      text-align center
    &__header
      margin-top 2rem




@media(max-width 500px)
  .hero
    background-position-Y 50%
    height 100vh
  .masonry
    &-column
      padding 0 1.6rem 3.2rem 1.6rem
      width 38rem
      width 100%
  .card
    &__rating
      width initial

@media(max-width 400px)
  .hero
    .index-header
      font-size 2.4rem