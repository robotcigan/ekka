.mobile-menu
  background #fff
  height 110%
  opacity 1
  overflow auto
  left 0
  // padding 4rem 3rem
  padding 5% 8%
  position fixed
  transform translateX(-100%)
  transition transform .4s cubic-bezier(1, 0, .2, .9) .1s, opacity .1s
  top 0
  width 100%
  z-index 200
  &--active
    opacity 1
    transform translateX(0)
  &__name
    color $main
    font-size 1.6rem
    font-weight 600
    letter-spacing 1px
    line-height .9
    text-decoration none
    text-transform uppercase
  &__close
    height 3rem
    position absolute
    right 1rem
    top 3.3rem
    padding-right 15%
    width 3rem
    &:before,
    &:after
      content ''
      background $main
      height 2px
      left 15%
      position absolute
      top 45%
      width 2rem
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
  &__header
    color $primary
    font-size 2.4rem
    font-weight 700
    letter-spacing 1px
    line-height 1.4
    margin-bottom 0
    margin-top 4rem
    text-transform uppercase
    max-width 30rem
  &__phone
    color #aaa
    font-size 1.8rem
    font-weight 600
    letter-spacing 1px

.mobile-nav
  margin-top 4rem
  &__link
    display block
    margin-bottom 2rem
    a
      color $main
      font-size 1.4rem
      font-weight 600
      letter-spacing 1px
      line-height 1
      text-decoration none
      text-transform uppercase

.tabs__select
  display none
  margin-bottom 2rem

