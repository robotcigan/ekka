*
  box-sizing border-box
  &:focus
    outline 0

*:focus
  outline 0

html
  font-size 62.5%
  max-width 100%
  width 100%

body
  color $main
  background #fff
  // font-family 'Lato', sans-serif
  font-family $font
  font-weight 400
  font-size 1.4em
  line-height 1.6
  max-width 100%
  // overflow hidden
  text-size-adjust 100%
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  width 100%
  *
    box-sizing border-box

// img
//   max-width 100%

.grid--container
  max-width 1120px

.list
  list-style-type none
  padding-left 3rem
  li
    position relative
    &:before
      content ''
      background $primary
      border-radius 50%
      height 4px
      left -1.5rem
      position absolute
      top .8rem
      width 4px

.link
  color $primary
  display inline-block
  border-bottom 1px solid rgba($primary, .3)
  text-decoration none
  transition all .2s
  &:hover
    border-color rgba($primary, .5)
    color $primary - 10%
  &--external
    position relative
    &:after
      content '\f08e'
      font-family FontAwesome
      color $primary
      position absolute
      right -2rem
      top -.5rem

.text-center
  text-align center

.text-right
  text-align right

.empty
  display block
  height 8rem
  margin-bottom 3rem
  &--special
    margin-bottom 0
    height 7.2rem

.back
  color $gray
  text-decoration none
  transition color .1s
  &:hover
    color $primary
  & + .inner-h1
    margin-top 1rem
  .fa
    margin-right 1rem

.btn
  border none
  border-radius $radius
  box-shadow 0 0 0 transparent
  color $main
  cursor pointer
  display inline-block
  font-size 1.4rem
  font-weight 600
  padding .5rem 2rem
  // transition background-color .2s, color .2s, box-shadow .5s
  transition all .6s
  text-decoration none
  &:hover
    .fa
      transform translate(7px, 1px)
  .fa
    transition transform .4s
    transform translate(5px, 1px)
  &--primary
    background-color $primary
    color #fff
    &:hover
      // background-color $primary - 8%
      // box-shadow 0 .3rem 1.6rem rgba($primary, .5)
      filter: drop-shadow(0 8px 12px rgba($primary, .5))
      // transform: translate3d(0,-2px,0)
  &--secondary
    background-color $secondary
    color $main
    &:hover
      background-color $secondary - 15%
      filter: drop-shadow(0 8px 12px rgba($secondary, .6))
  &--gray
    background-color #f6f6f6
  &--dashed
    border 1px dashed $gray
    &-active
      background-color $light-gray
      border 1px solid $light-gray
      transition background-color .2s, border-color .2s
  &--inner
    background rgba($main, .2)
    color #fff
    padding .5rem 1.5rem
    .fa
      margin-right 1rem
      transform translate(3px, 0)
    &:hover
      .fa
        transform translate(1px, 0)
  &--middle
    font-size 1.6rem
    font-weight 600
    padding .6rem 3rem
  &--big
    font-size 1.6rem
    font-weight 600
    padding .8rem 2rem
  &--full-size
    width 100%
    text-align center
  &--type-2
    border 1px solid $primary
    background transparent
    color $primary
    &:hover
      color #fff
      background $primary
  &--disable
    background-color #f6f6f6
    color #999
    &:hover
      filter: none
  img
    display inline-block



.adress
  color $gray
  margin-bottom 1rem
  .fa
    margin-right .4rem

.relative
  position relative

.image-background
  background url('../../img/bg.jpg') 50%
  background-size cover
  height 100%
  margin-bottom -1rem
  position relative
  width 100%
  &:before
    background rgba($main, .5)
    content ''
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    z-index 0

.responsive-table
  min-height .01%
  overflow-x auto

.table
  border-collapse collapse
  max-width 100%
  margin-bottom 2rem
  margin-top 2rem
  width 100%
  thead
    background rgba($primary, .05)
    th
      font-weight 600
      line-height 1.2
  th,
  td
    padding 1.2rem 1.5rem
    padding-right 1rem
    // text-align: left
    border 1px solid $light-gray
    margin 0
  th:first-child,
  td:first-child
    max-width 35rem
  tfoot
    td
      border none
      font-weight 600
  
  a
    color $primary
    text-decoration none
    &:hover
      border-bottom 1px solid rgba($primary, .2)