import '../helpers/variables.styl'

*
  box-sizing border-box
  &:focus
    outline 0

*:focus
  outline 0

html
  font-size 62.5%
  width 100%

body
  color $main
  background #fff
  // font-family 'Lato', 'Open sans', 'Arial', 'Helvetica' sans-serif
  font-family 'Lato', sans-serif
  font-weight 400
  font-size 1.4em
  line-height 1.6
  text-size-adjust 100%
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  width 100%
  *
    box-sizing border-box

// img
//   max-width 100%

.grid--container
  max-width 1120px

.list
  list-style-type none
  padding-left 3rem
  li
    position relative
    &:before
      content ''
      background $primary
      border-radius 50%
      height 4px
      left -1.5rem
      position absolute
      top .8rem
      width 4px

.link
  color $primary
  display inline-block
  border-bottom 1px solid rgba($primary, .3)
  text-decoration none
  transition all .2s
  &:hover
    border-color rgba($primary, .5)
    color $primary - 10%
  &--external
    position relative
    &:after
      content '\f08e'
      font-family FontAwesome
      color $primary
      position absolute
      right -2rem
      top -.5rem

.text-center
  text-align center

.empty
  display block
  height 8rem
  margin-bottom 3rem

.back
  color $gray
  text-decoration none
  .fa
    margin-right 1rem

.btn
  border none
  border-radius $radius
  color $main
  cursor pointer
  display inline-block
  font-size 1.4rem
  font-weight 600
  padding .5rem 2rem
  transition background-color .2s
  text-decoration none
  &:hover
    .fa
      transform translate(7px, 1px)
  .fa
    transition transform .4s
    transform translate(5px, 1px)
  &--primary
    background-color $primary
    color #fff
    &:hover
      background-color $primary - 8%
  &--secondary
    background-color $secondary
    color $main
    &:hover
      background-color $secondary - 15%
  &--gray
    background-color #f6f6f6
  &--dashed
    border 1px dashed $gray
    &-active
      background-color $light-gray
      border 1px solid $light-gray
  &--inner
    background rgba($main, .2)
    color #fff
    padding .5rem 1.5rem
    .fa
      margin-right 1rem
  &--middle
    font-size 1.6rem
    font-weight 600
    padding .6rem 3rem
  &--big
    font-size 1.8rem
    font-weight 600
    padding .8rem
  &--full-size
    width 100%
    text-align center

input,
select,
textarea
  background #fff
  border 1px solid $light-gray
  border-radius $radius
  padding .5rem
  width 100%

textarea
  padding 1rem

select,
option
  cursor pointer

.form-group
  margin-bottom 4rem
label
  display block
  margin-bottom 1rem

#slider-value
  color #999
  display inline-block
  font-size 1.1rem
  margin-top 1rem
.slider-value-text
  color #999
  display inline-block
  font-size 1.1rem
  font-weight 600
  margin-left .5rem
  margin-top 1rem

.guest-clicker
  position relative
  &__modal
    box-shadow $shadow
    bottom -200%
    border-radius $radius
    display block
    left 0
    padding 2rem
    position absolute
    width 20rem
  &__label
    display inline-block
    margin-right 1rem
  &__number
    display inline-block
    margin 0 .5rem
  &__btn
    display inline-block
    border 1px solid $light-gray
    border-radius 50%
    cursor pointer
    height 2.4rem
    text-align center
    transition all .2s
    width 2.4rem
    &:hover
      background $primary
      border-color $primary
      color #fff
  