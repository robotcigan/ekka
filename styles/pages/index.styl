.hero
  align-items center
  background url('../../img/hero.jpg') no-repeat 50%
  background-position-Y 75%
  background-size cover
  display flex
  height 55rem
  margin-bottom 8rem
  position relative
  width 100%
  &:before
    content ''
    background rgba($main, .6)
    left 0
    height 100%
    position absolute
    top 0
    width 100%
    z-index 0
  &-content
    position relative
    z-index 5
  .index-header
    color #fff
    font-size 3.6rem
    font-weight 800
    margin 0
    margin-bottom 1rem
  // &__input-group
  //   border 1px solid $gray
  &__input
    display inline
    position relative
    &--active
      &:after
        background $secondary
        bottom -4.8rem
        content ''
        height 3px
        left -21.5rem
        position absolute
        width 21.5rem
    input, select
      border none
      border-radius 0
      cursor pointer
      display block
      font-weight 400
      float left
      height 4.8rem
      margin 0
      padding 0 2rem
      width 21.5rem
    &:first-child input
      border-radius $radius 0 0 $radius
    &:not(:last-child):before
      background-color $light-gray
      content ''
      height 2.4rem
      position absolute
      right 0
      top 1.2rem
      width 1px
  &__btn
    background-color $secondary
    border none
    border-radius 0 $radius $radius 0
    color $main
    cursor pointer
    font-size 1.8rem
    font-weight 600
    height 4.8rem
    padding 0 4rem
    width initial



.white-block
  background-color #fff
  display block
  padding 7rem 0

.page-section
  margin-bottom 10rem

.offer
  position relative
  &__title
    display block
    font-size 1.8rem
    font-weight 700
    z-index 1
  &__img
    display block
    img
      width 100%
  &__plate
    background-color $secondary
    display inline-block
    border-radius $radius
    color $main
    font-size 1.8rem
    font-weight 600
    left 1rem
    position absolute
    padding .2rem 1rem
    top 1rem
    z-index 10
    .ruble:before
      font-size 1.8rem
      font-weight 600

.popular-directions
  display block
  margin-left -1.6rem
  margin-right -1.6rem

.masonry
  &-column
    padding 0 1.6rem 3.2rem 1.6rem
    // width 41.2rem
    width 33.33%

.direction
  background-size cover !important
  height 47rem
  shadow()
  &--type-2
    height 27rem
  &--type-3
    height 37rem
  &__img
    display none
  &__text
    color #fff
    bottom 0
    padding 1.6rem 2.4rem
    position absolute
  &__city
    font-size 3rem
    font-weight 700
    line-height 1
    text-transform uppercase
  &__country
    font-size 1.6rem
    opacity .7


.subheader
  margin-bottom 4rem
  clearfix()
  h2
    line-height 1
    margin 0
  .left
    display block
    float left
    width 60%
  .right
    display block
    float left
    width 40%
  .btn-group
    float right
    .btn
      margin-right 1rem

.special-slider
  &-nav
    font-size 3rem
    float right
    line-height 1
    .fa
      color $gray
      cursor pointer
      line-height 1
      margin-right 2rem
      &:before
        line-height 1
        transition color .1s
      &:hover
        &:before
          color $main
  .slide
    display flex
    &__img
      display inline-block
      margin-right 1.6rem
    &__text
      align-content space-between
      display flex
      flex-wrap wrap
    &__top
      display block
      padding-top 1rem
      width 100%
    &__bottom
      align-self flex-end
      display block
      padding-bottom 1rem
      width 100%
    &__title
      font-weight 600
      font-size 1.8rem
    &__price
      color $primary
      font-size 3rem
      font-weight 600
      line-height 1
    &__price-name
      color $gray