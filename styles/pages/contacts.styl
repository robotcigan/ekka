.contacts-map
  -webkit-filter grayscale(100%)
  filter grayscale(100%)
  height 40rem
  margin-top -4rem
  margin-bottom 4rem
  iframe
    height 100%
    width 100%


.feedback
  margin-top 3rem

.contacts-data
  &__icon
    display inline-block
    margin-right 1rem
    width 2rem
    .icon
      vertical-align middle
      &:before
        color $light-gray
        font-size 2rem
  &__title
    font-size 1.8rem
    font-weight 600
  &__desc
    margin-bottom 1rem
    margin-top 1rem
    padding-left 3rem
  span
    vertical-align middle


.contacts-team
  background-color #f9fafc
  margin-top 6rem
  padding 8rem 0
  h3
    margin 2rem 0
  &__item
    background-color #fff
    display flex
    flex-wrap wrap
    margin-top 2rem
    margin-bottom 2rem
    padding 2rem 2rem
    width 100%
  &__name
    font-size 2.2rem
    font-weight 600
    line-height 1
    margin-bottom 1rem
  &__position
    color $gray
    line-height 1.2
    margin-bottom 1rem
  &__number
    margin-bottom 1rem
    width 100%
  &__skype
    color $gray
    .fa
      color $primary
      font-size 1.6rem
      margin-right .5rem