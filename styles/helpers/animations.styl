.mfp-gallery
  animation opacity .4s ease

@keyframes opacity
  0%
    opacity 0
  100%
    opacity 1

@keyframes fadeUp
  0%
    opacity 0
    transform translate3d(0, 10px, 0)
  100%
    opacity 1
    transform none

@keyframes fadeDown
  0%
    opacity 1
    transform none
  100%
    opacity 0
    transform translate3d(0, 10px, 0)


@keyframes heroDown
  0%
    opacity 0
    transform translate3d(0, -10px, 0)
  100%
    opacity 1
    transform none

@keyframes heroUp
  0%
    opacity 0
    transform translate3d(0, 10px, 0)
  100%
    opacity 1
    transform none

@keyframes heroScale
  0%
    transform scale(1.07)
  100%
    transform none